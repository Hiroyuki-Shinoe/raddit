<!-- app/views/links/show.html.erbで呼び出しているpartialの記述 -->
<%= div_for(comment) do %>
  <div class="comments_wrapper clearfix">
    <div class="pull-left">
      <p class="lead"><%= comment.body %></p>
      <p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %></strong> by <%= comment.user.email %></small></p>
    </div>

    <div class="btn-group pull-right">
      <% if comment.user == current_user %>
        <!-- 今回はcomments#edit が無いのでeditへのリンクは書かない -->
        <!-- <%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-sm btn-default' %> -->
        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default' %>
        <% end %>
    </div>
  </div>
<% end %>